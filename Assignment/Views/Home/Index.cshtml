@{
    ViewBag.Title = "Home";
    Layout = "_Layout";
}

<div class="container-2">

    <section class="section-1">
        <div class="content-1">
            <h1 class="title-1">Find Your Perfect Ride, Effortlessly.</h1>
            <h2 class="subtitle-1">
                Rent from a wide range of premium cars at unbeatable prices.
            </h2>
        </div>
        <button class="btn-primary btn-1">Book Now</button>
    </section>

    <section class="widget-box">
        <div class="form-grid">

            <div class="input-group">
                <label>Pick-up Date</label>
                <input class="form-input" type="date" value="2025-12-10" />
            </div>

            <div class="input-group">
                <label>Drop-off Date</label>
                <input class="form-input" type="date" value="2025-12-12" />
            </div>

            <button class="btn-primary btn-search">Search Cars</button>
        </div>
    </section>

    <section>
        <h2 class="section-header">Featured Cars</h2>
        <div class="car-grid">

            <div class="car-card">
                <img src="~/images/car3.jpg" alt="Economy Sedan" class="car-img" />
                <div class="car-details">
                    <h3 class="car-title">Economy Sedan</h3>
                    <div class="car-features">
                        <span>5 Seats</span> | <span>A/C</span> | <span>Auto</span>
                    </div>
                    <div class="price-row">
                        <p class="price-tag">RM100<span class="price-suffix">/day</span></p>
                        <button class="btn-primary btn-rent">Rent Now</button>
                    </div>
                </div>
            </div>

            <div class="car-card">
                <img src="~/images/car2.jpg" alt="Luxury Coupe" class="car-img" />
                <div class="car-details">
                    <h3 class="car-title">Luxury Coupe</h3>
                    <div class="car-features">
                        <span>2 Seats</span> | <span>A/C</span> | <span>Auto</span>
                    </div>
                    <div class="price-row">
                        <p class="price-tag">RM100<span class="price-suffix">/day</span></p>
                        <button class="btn-primary btn-rent">Rent Now</button>
                    </div>
                </div>
            </div>

            <div class="car-card">
                <img src="~/images/car1.jpg" alt="Premium SUV" class="car-img" />
                <div class="car-details">
                    <h3 class="car-title">Premium SUV</h3>
                    <div class="car-features">
                        <span>7 Seats</span> | <span>A/C</span> | <span>Auto</span>
                    </div>
                    <div class="price-row">
                        <p class="price-tag">RM100<span class="price-suffix">/day</span></p>
                        <button class="btn-primary btn-rent">Rent Now</button>
                    </div>
                </div>
            </div>

        </div>
    </section>

</div>